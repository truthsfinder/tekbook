<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#4e4e4e"
    tools:context="com.tb.sell.tekbook.EditProfilePictureActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#900000"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <!-- Register progress -->

    <Button
        android:id="@+id/choose_image"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_sign_in"
        android:text="Choose image from file"
        android:drawableRight="@drawable/image_icon"
        android:textColor="#fff"
        android:padding="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/profile_picture_display"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="30sp"
        android:padding="10sp"
        app:srcCompat="@drawable/profile" />

    <EditText
        android:id="@+id/profile_picture_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="30sp"
        android:padding="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textSize="18sp"
        android:inputType="textPersonName"
        android:gravity="center"
        android:hint="Enter Profile Picture Name" />

    <Button
        android:id="@+id/update_profile_picture"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_sign_in"
        android:text="Update Profile Picture"
        android:onClick="update_profile_picture"
        android:textColor="#fff"
        android:padding="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>
